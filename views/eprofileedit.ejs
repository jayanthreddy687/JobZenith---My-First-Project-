    <form action="/eprofilesave" method="post" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-xl-4">
                    <div class="card-box text-center">
                        <% if(typeof data.image != 'undefined'){%>                    
                        <img src="/images/<%=data.image%>"
                            class="rounded-circle avatar-xl img-thumbnail" alt="profile-image">
                        <%} else{%>
                            <img src="/images/avatar7.png"
                            class="rounded-circle avatar-xl img-thumbnail" alt="profile-image">
                        <%}%>
                        <h4 class="mb-0">
                            <%=data.Fname%>
                                <%=data.Lname%>
                        </h4>
                        <p class="text-muted"></p>
                        <div class="text-left mt-3">
                            <p>Upload Image <input type="file" name="image"></p>
                            <h4 class="font-13 text-uppercase">About Me :</h4>
                            <p class="text-muted font-13 mb-3">
                                <%=data.abt %>

                            </p>
                            <p class="text-muted mb-2 font-13"><strong>Full Name :</strong> <span class="ml-2">
                                    <%=data.Fname%>
                                        <%=data.Lname%>

                                </span></p>

                            <p class="text-muted mb-2 font-13"><strong>Mobile :</strong><span class="ml-2">
                                    <%=data.phno%>
                                </span></p>

                            <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ml-2 ">
                                    <%=data.email%>
                                </span></p>

                            <p class="text-muted mb-1 font-13"><strong>Gender :</strong> <span class="ml-2">
                                    <%=data.gender%>
                                </span></p>
                        </div>

                        <ul class="social-list list-inline mt-3 mb-0">
                            <li class="list-inline-item">
                                <a href="<%=data.fb%>" class="social-list-item border-purple text-purple"><i
                                        class="fab fa-facebook"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="<%=data.linkedin%>" class="social-list-item border-danger text-danger"><i
                                        class="fab fa-linkedin"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="<%=data.twitter%>" class="social-list-item border-info text-info"><i
                                        class="fab fa-twitter"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="<%=data.github%>" class="social-list-item border-secondary text-secondary"><i
                                        class="fab fa-github"></i></a>
                            </li>
                        </ul>
                    </div> <!-- end card-box -->

                    <div class="card-box">
                        <h4 class="header-title">Skills</h4>
                        <div class="pt-1">
                            <h6 class="text-uppercase mt-0">Skill1</h6>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="Skill1" class="form-control" placeholder="Skill1"
                                    value="<%=data.skill1%>">
                            </div>
                        </div>

                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Skill2</h6>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="Skill2" class="form-control" placeholder="Skill2"
                                    value="<%=data.skill2%>">
                            </div>
                        </div>

                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Skill3</h6>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="Skill3" class="form-control" placeholder="Skill3"
                                    value="<%=data.skill3%>">
                            </div>
                        </div>

                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Skill4</h6>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="Skill4" class="form-control" placeholder="Skill4"
                                    value="<%=data.skill4%>">
                            </div>
                        </div>

                        <div class="mt-2 pt-1">
                            <h6 class="text-uppercase">Skill5</h6>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="Skill5" class="form-control" placeholder="Skill5"
                                    value="<%=data.skill5%>">
                            </div>
                        </div>

                    </div> <!-- end card-box-->

                </div> <!-- end col-->

                <div class="col-lg-8 col-xl-8">
                    <div class="card-box">
                        <ul class="nav nav-pills navtab-bg">
                            <li class="nav-item">
                                <a href="#about-me" data-toggle="tab" aria-expanded="true" class="nav-link ml-0 active">
                                    <i class="mdi mdi-face-profile mr-1"></i>About Me
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#settings" data-toggle="tab" aria-expanded="false" class="nav-link">
                                    <i class="mdi mdi-settings-outline mr-1"></i>Settings
                                </a>
                            </li>
                        </ul>

                        <div class="tab-content">

                            <div class="tab-pane show active" id="about-me">

                                <h5 class="mb-4 text-uppercase"><i class="mdi mdi-briefcase mr-1"></i>
                                    Experience</h5>

                                <ul class="list-unstyled timeline-sm">
                                    <li class="timeline-sm-item">
                                        <P>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" name="experience1yr" class="form-control"
                                                placeholder="Year" value="<%=data.experience1yr%>">
                                        </div>
                                        </P>
                                        <h5 class="mt-0 mb-1">
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="experience1role" class="form-control"
                                                    placeholder="role" value="<%=data.experience1role%>">
                                            </div>
                                        </h5>
                                        <p>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" name="experience1company" class="form-control"
                                                placeholder="company" value="<%=data.experience1company%>">
                                        </div>
                                        </p>
                                        <p class="text-muted mt-2">
                                        <div class="col-sm-9 text-secondary">
                                            <input type="textarea" name="experience1abt" class="form-control"
                                                placeholder="Tell your about Experience"
                                                value="<%=data.experience1abt%>">
                                        </div>
                                        </p>

                                    </li>
                                    <li class="timeline-sm-item">
                                        <p>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" name="experience2yr" class="form-control"
                                                placeholder="Year" value="<%=data.experience2yr%>">
                                        </div>
                                        </p>
                                        <h5 class="mt-0 mb-1">
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="experience2role" class="form-control"
                                                    placeholder="role" value="<%=data.experience2role%>">
                                            </div>
                                        </h5>
                                        <p>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" name="experience2company" class="form-control"
                                                placeholder="company" value="<%=data.experience2company%>">
                                        </div>
                                        </p>
                                        <p class="text-muted mt-2">
                                        <div class="col-sm-9 text-secondary">
                                            <input type="textarea" name="experience2abt" class="form-control"
                                                placeholder="Tell your about Experience"
                                                value="<%=data.experience2abt%>">
                                        </div>
                                        </p>
                                    </li>
                                    <li class="timeline-sm-item">
                                        <p>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" name="experience3yr" class="form-control"
                                                placeholder="Year" value="<%=data.experience3yr%>">
                                        </div>
                                        </p>
                                        <h5 class="mt-0 mb-1">
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="experience3role" class="form-control"
                                                    placeholder="role" value="<%=data.experience3role%>">
                                            </div>
                                        </h5>
                                        <p>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="text" name="experience3company" class="form-control"
                                                placeholder="company" value="<%=data.experience3company%>">
                                        </div>
                                        </p>
                                        <p class="text-muted mt-2 mb-0">
                                        <div class="col-sm-9 text-secondary">
                                            <input type="textarea" name="experience3abt" class="form-control"
                                                placeholder="Tell your about Experience"
                                                value="<%=data.experience3abt%>">
                                        </div>
                                        </p>
                                    </li>
                                </ul>

                                <h5 class="mb-3 mt-4 text-uppercase"><i class="mdi mdi-cards-variant mr-1"></i>
                                    Projects</h5>
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>#</th>
                                                <th>Project Name</th>
                                                <th>Start Date</th>
                                                <th>Due Date</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td> <input type="text" name="proj1name" class="form-control"
                                                        placeholder="Project Name" value="<%=data.proj1name%>">
                                                </td>
                                                <td><input type="date" name="proj1sd" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj1sd%>"></td>
                                                <td><input type="date" name="proj1ed" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj1ed%>"></td>
                                                <td><input type="text" name="proj1status" class="form-control"
                                                        placeholder="status" value="<%=data.proj1status%>"></td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td><input type="text" name="proj2name" class="form-control"
                                                        placeholder="Project Name" value="<%=data.proj2name%>"></td>
                                                <td><input type="date" name="proj2sd" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj2sd%>"></td>
                                                <td><input type="date" name="proj2ed" class="form-control"
                                                        placeholder="dd/mm/yyyy"value="<%=data.proj2ed%>"></td>
                                                <td><input type="text" name="proj2status" class="form-control"
                                                        placeholder="status"value="<%=data.proj2status%>"></td>
                                            </tr>
                                            <tr>
                                                <td>3</td>
                                                <td><input type="text" name="proj3name" class="form-control"
                                                        placeholder="Project Name" value="<%=data.proj3name%>"></td>
                                                <td><input type="date" name="proj3sd" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj3sd%>">
                                                </td>
                                                <td><input type="date" name="proj3ed" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj3ed%>"></td>
                                                <td><input type="text" name="proj3status" class="form-control"
                                                        placeholder="status"value="<%=data.proj3status%>"></td>
                                            </tr>
                                            <tr>
                                                <td>4</td>
                                                <td><input type="text" name="proj4name" class="form-control"
                                                        placeholder="Project Name" value="<%=data.proj4name%>"></td>
                                                <td><input type="date" name="proj4sd" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj4sd%>">
                                                </td>
                                                <td><input type="date" name="proj4ed" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj4ed%>"></td>
                                                <td><input type="text" name="proj4status" class="form-control"
                                                        placeholder="status"value="<%=data.proj4status%>"></td>
                                            </tr>
                                            <tr>
                                                <td>5</td>
                                                <td><input type="text" name="proj5name" class="form-control"
                                                        placeholder="Project Name" value="<%=data.proj5name%>"></td>
                                                <td><input type="date" name="proj5sd" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj5sd%>"></td>
                                                <td><input type="date" name="proj5ed" class="form-control"
                                                        placeholder="dd/mm/yyyy" value="<%=data.proj5ed%>"></td>
                                                <td><input type="text" name="proj5status" class="form-control"
                                                        placeholder="status" value="<%=data.proj5status%>"></td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                                <div class="text-right">
                                    <button type="submit" class="btn btn-success waves-effect waves-light mt-2"><i
                                            class="mdi mdi-content-save"></i> Save</button>
                                </div>
                            </div>
                            <!-- end timeline content-->

                            <div class="tab-pane" id="settings">
                                <h5 class="mb-3 text-uppercase bg-light p-2"><i class="mdi mdi-account-circle mr-1"></i>
                                    Personal Info</h5>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="firstname">First Name</label>
                                            <input type="text" class="form-control" id="Fname" name="Fname"
                                                placeholder="Enter first name" value="<%=data.Fname%>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="lastname">Last Name</label>
                                            <input type="text" class="form-control" id="Lname" name="Lname"
                                                placeholder="Enter last name" value="<%=data.Lname%>">
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="userbio">Bio</label>
                                            <textarea class="form-control" id="userbio" rows="4" name="abt"
                                                placeholder="Write something..." value="<%=data.abt%>"></textarea>
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="useremail">Email Address</label>
                                            <input type="email" class="form-control" id="useremail"
                                                placeholder="Enter email" value="<%=data.email%>" disabled>
                                        </div>
                                    </div>

                                </div> <!-- end row -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="useremail">Phone Number</label>
                                            <input type="number" class="form-control" id="useremail"
                                                placeholder="Enter Phone Number" name="phno" value="<%=data.phno%>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="useremail">gender</label>
                                                <input type="text" class="form-control" id="useremail"
                                                    placeholder="Enter gender" name="gender" value="<%=data.gender%>">
                                            </div>
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->

                                <h5 class="mb-3 text-uppercase bg-light p-2"><i class="mdi mdi-earth mr-1"></i>
                                    Social
                                </h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="social-fb">Facebook</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                            class="fab fa-facebook-square"></i></span>
                                                </div>
                                                <input type="text" name="fb" class="form-control" id="social-fb"
                                                    placeholder="Url" value="<%=data.fb%>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="social-tw">Twitter</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fab fa-twitter"></i></span>
                                                </div>
                                                <input type="text" name="twitter" class="form-control" id="social-tw"
                                                    placeholder="Username" value="<%=data.twitter%>">
                                            </div>
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="social-lin">Linkedin</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                            class="fab fa-linkedin"></i></span>
                                                </div>
                                                <input type="text" name="linkedin" class="form-control" id="social-lin"
                                                    placeholder="Url" value="<%=data.linkedin%>">
                                            </div>
                                        </div>
                                    </div> <!-- end col -->

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="social-gh">Github</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fab fa-github"></i></span>
                                                </div>
                                                <input type="text" class="form-control" id="social-gh"
                                                    placeholder="Username" name="github" value="<%=data.github%>">
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- end row -->

                                <div class="text-right">
                                    <button type="submit" class="btn btn-success waves-effect waves-light mt-2"><i
                                            class="mdi mdi-content-save"></i> Save</button>
                                </div>
                            </div>
                            <!-- end settings content-->

                        </div> <!-- end tab-content -->
                    </div> <!-- end card-box-->

                </div> <!-- end col -->
            </div>
        </div>

    </form>

    <%- include('./partials/chatbot.ejs'); %>

</body>

